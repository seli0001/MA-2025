<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.sensor.accelerometer" android:required="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RPGHabitTracker"
        tools:targetApi="31">
        
        <!-- Splash Activity -->
        <activity
            android:name=".ui.auth.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.RPGHabitTracker.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Authentication -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
            
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        
        <!-- Main Activity -->
        <activity
            android:name=".ui.home.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.RPGHabitTracker" />
        
        <!-- Task Management -->
        <activity
            android:name=".ui.tasks.AddTaskActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.RPGHabitTracker" />
        
        <activity
            android:name=".ui.tasks.TaskDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.RPGHabitTracker" />
        
        <!-- Calendar -->
        <activity
            android:name=".ui.calendar.CalendarActivity"
            android:exported="false"
            android:theme="@style/Theme.RPGHabitTracker" />
        
        <!-- Boss Battle -->
        <activity
            android:name=".ui.battle.BattleActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.RPGHabitTracker" />

        <!-- Compatibility alias for legacy navigation intents -->
        <activity
            android:name=".presentation.battle.BossBattleActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.RPGHabitTracker" />
        
        <!-- Categories Management -->
        <activity
            android:name=".ui.categories.CategoriesActivity"
            android:exported="false"
            android:theme="@style/Theme.RPGHabitTracker" />
        
        <!-- Statistics -->
        <activity
            android:name=".ui.statistics.StatisticsActivity"
            android:exported="false"
            android:theme="@style/Theme.RPGHabitTracker" />
        
        <!-- Settings -->
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.RPGHabitTracker" />
        
        <!-- Friends -->
        <activity
            android:name=".ui.friends.FriendsActivity"
            android:exported="false"
            android:theme="@style/Theme.RPGHabitTracker" />
            
        <activity
            android:name=".ui.friends.UserProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.RPGHabitTracker" />
        
        <!-- Alliance -->
        <activity
            android:name=".ui.alliance.AllianceActivity"
            android:exported="false"
            android:theme="@style/Theme.RPGHabitTracker" />
            
        <activity
            android:name=".ui.alliance.AllianceChatActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.RPGHabitTracker" />
        
        <!-- Equipment Inventory -->
        <activity
            android:name=".ui.equipment.EquipmentActivity"
            android:exported="false"
            android:theme="@style/Theme.RPGHabitTracker" />
        
        <!-- Badges -->
        <activity
            android:name=".ui.badges.BadgesActivity"
            android:exported="false"
            android:theme="@style/Theme.RPGHabitTracker" />
        
        <!-- Firebase Cloud Messaging Service -->
        <service
            android:name=".services.RPGFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        
        <!-- Default notification icon and color for FCM -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notification" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/md_theme_light_primary" />
        
    </application>

</manifest>
